  <br />
  <div>
    <%= f.label :tag_list, "タグ" %><br />
    <%= f.text_field :tag_list, value: @photographer.tag_list.to_s %>
  </div>

<br>
  <div class="field">
    <%= f.label :initial_message, '初期メッセージの変更' %><br>
    <%= f.text_area :initial_message %>
  </div>
<br />

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
